<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Menu Item</h6>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-6">
        <%= form_with(model: item, url: [restaurant, item], local: true) do |form| %>
          <% if item.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

              <ul>
                <% item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group mb-2">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control form-control-sm' %>
          </div>

          <div class="form-group mb-2">
            <%= form.label :cost %>
            <%= form.text_field :cost, class: 'form-control form-control-sm' %>
          </div>

          <div class="form-group mb-2">
            <%= form.label :category %>
            <%= form.text_field :category, class: 'form-control form-control-sm' %>
          </div>

          <div class="form-group mb-2">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control form-control-sm' %>
          </div>

          <div class="form-group mb-2">
            <%= form.submit class: 'btn btn-primary mb-2' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
